<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/filmListFragment">

    <fragment
        android:id="@+id/filmListFragment"
        android:name="com.example.myapprecyclernavhiltmvvm.ui.film_fragments.FilmListFragment"
        android:label="fragment_film_list"
        tools:layout="@layout/fragment_film_list" >
        <action
            android:id="@+id/action_filmListFragment_to_filmDescriptionFragment"
            app:destination="@id/filmDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/filmDescriptionFragment"
        android:name="com.example.myapprecyclernavhiltmvvm.ui.film_fragments.FilmDescriptionFragment"
        android:label="fragment_film_description"
        tools:layout="@layout/fragment_film_description">
        <argument
            android:name="name"
            android:defaultValue=""
            app:argType="string"/>
        <argument
            android:name="description"
            android:defaultValue=""
            app:argType="string"/>
    </fragment>
</navigation>